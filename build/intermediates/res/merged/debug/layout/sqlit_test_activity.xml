<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<Button 
	    android:id="@+id/create_table"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="create_table"/>
	<Button 
	    android:id="@+id/insert_data"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="insert_data"/>
	<Button 
	    android:id="@+id/updata_data"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="updata_data"/>
	<Button 
	    android:id="@+id/delete_data"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="delete_data"/>
	<Button 
	    android:id="@+id/query_data"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="query_data"/>
	
	<ListView 
	    android:id="@+id/sqlite_test_listview"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"></ListView>
</LinearLayout>
