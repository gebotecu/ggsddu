<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
	<ImageView
	    android:id="@+id/combination_left_image"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:src="@drawable/combination_left_image"/>
	
	<TextView 
	    android:id="@+id/combination_textview"
	    android:layout_width="220dp"
	    android:layout_height="50dp"
	    android:textSize="20sp"
	    android:gravity="center"
	    android:text="我是组合view"/>
	<ImageView
	    android:id="@+id/combination_right_image"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    
	    android:src="@drawable/combination_right_image"/>
</LinearLayout>
