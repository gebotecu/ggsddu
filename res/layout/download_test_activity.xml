<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    

    <TextView 
        android:id="@+id/download_test_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"/>
    <ProgressBar 
        android:id="@+id/download_test_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/download_test_name"
        android:progress="0"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"/>
    
    <Button 
        android:id="@+id/download_test_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/download_test_progressbar"
        android:text="开始"/>
    <Button 
        android:id="@+id/download_test_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/download_test_progressbar"
        android:layout_toRightOf="@id/download_test_start"
        android:text="暂停"/>
</RelativeLayout>
