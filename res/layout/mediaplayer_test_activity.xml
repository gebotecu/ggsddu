<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <FrameLayout 
        android:id="@+id/mediaplayer_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FFFF00"></FrameLayout>
    
    <Button 
	    android:id="@+id/mediaplayer_start"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/mediaplayer_view"
	    android:layout_marginTop="20dp"
	    android:text="start"/>
	<Button 
	    android:id="@+id/mediaplayer_pause"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/mediaplayer_view"
	    android:layout_toRightOf="@id/mediaplayer_start"
	    android:layout_marginTop="20dp"
	    android:text="pause"/>
	
	
	<Button 
	    android:id="@+id/mediaplayer_stop"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/mediaplayer_view"
	    android:layout_toRightOf="@id/mediaplayer_pause"
	    android:layout_marginTop="20dp"
	    android:text="stop"/>
	
	<Button 
	    android:id="@+id/mediaplayer_release"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/mediaplayer_view"
	    android:layout_toRightOf="@id/mediaplayer_stop"
	    android:layout_marginTop="20dp"
	    android:text="release"/>
	
	<Button 
	    android:id="@+id/mediaplayer_reset"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/mediaplayer_view"
	    android:layout_toRightOf="@id/mediaplayer_release"
	    android:layout_marginTop="20dp"
	    android:text="reset"/>
</RelativeLayout>
