<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="200dp"
    android:background="#888888"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/weixin_chat_dialog_images"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/weixin_chat_dialog_mic_image"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/recorder" />

        <ImageView
            android:id="@+id/weixin_chat_dialog_voice_image"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/v7" />
    </LinearLayout>

    <TextView
        android:id="@+id/weixin_chat_dialog_textview"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_below="@id/weixin_chat_dialog_images"
        android:gravity="center"
        android:text="松开发送"
        android:textSize="30sp" />

</RelativeLayout>